pipeline {
    agent any
    parameters { // Par치metros para definir la URL y branch del repositorio
        string(name: 'REPO_URL', defaultValue: '', description: 'URL del repo')
        string(name: 'REPO_BRANCH', defaultValue: '', description: 'Branch')
    }
    stages { // Etapas del pipeline
        stage('Clonar Repo') {
            steps { // Simulacion de la clonaci칩n del repositorio
                echo "Clonando repo ${params.REPO_URL} en branch ${params.REPO_BRANCH}"
            }
        }
        // Simulaci칩n de la ejecuci칩n de pruebas
        stage('Simular Build/Test') {
            steps {
                echo "Simulando build/test del repo"
            }
        }
    }
}